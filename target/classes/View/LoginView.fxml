<AnchorPane fx:id="aPaneLogin" prefHeight="229.0" prefWidth="473.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studenti.uninsubria.emotionalsongs.ClientES.Controller.LoginController">
   <children>
      <Label fx:id="lblPassword" layoutX="110.0" layoutY="96.0" text="Password: ">
         <font>
            <Font name="Calibri Bold" size="13.0" />
         </font>
      </Label>
      <Label fx:id="lblUsername" layoutX="109.0" layoutY="63.0" text="Username: ">
         <font>
            <Font name="Calibri Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="txtFieldUsername" layoutX="207.0" layoutY="59.0">
         <font>
            <Font name="Calibri Bold" size="12.0" />
         </font>
      </TextField>
      <Button fx:id="btnAccedi" contentDisplay="CENTER" layoutX="248.0" layoutY="126.0" mnemonicParsing="false" onAction="#btnAccediClicked" prefHeight="27.0" prefWidth="64.0" text="Accedi">
